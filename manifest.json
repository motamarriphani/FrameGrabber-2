{
  "manifest_version": 3,
  "name": "YouTube FrameGrabber2",
  "version": "1.0",
  "description": "Captures the current frame of a YouTube video and downloads it as a customizable image.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "*://*.youtube.com/watch*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/watch*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "style.css"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    },
    "default_title": "Grab YouTube Frame"
  }
}
